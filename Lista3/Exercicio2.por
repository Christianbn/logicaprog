//Exercicio 2 - “Programa de fidelidade” - “Multiplique seus pontos”
programa{
	funcao inicio(){
		inteiro cupons, pontos

		//Entrada
		escreva("Digite seus cupons: ")
		leia(cupons)

		//Execucao
		pontos = cupons * 3

		//Saida
		escreva("Seus cupons agora valem ", pontos, " pontos!")
	}
}

