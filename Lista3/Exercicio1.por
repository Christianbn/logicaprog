//Exercicio 1 - “Programa de fidelidade” - “Ver os seus pontos”
programa{
	funcao inicio(){
		inteiro cupons, pontos

		escreva("Digite seus cupons: ")
		leia(cupons)
		pontos = cupons

		escreva("De acordo com seus cupons, você tem ", pontos, " pontos no programa de fidelidade!\n")
	}
}

